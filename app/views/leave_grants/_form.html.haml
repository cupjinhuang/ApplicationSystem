= simple_form_for(@leave_grant) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :staff_id
    = f.input :passport_id
    = f.input :post
    = f.input :years_at_iiis
    = f.input :phone_num
    = f.input :visit_univerisity_name
    = f.input :inviter_name
    = f.input :inviter_contact
    = f.input :visit_date
    = f.input :give_talk
    = f.input :title1
    = f.input :title2
    = f.input :title3
    = f.input :title4
    = f.input :airfare
    = f.input :hotel_fare
    = f.input :hotel_days
    = f.input :other_fare
    = f.input :last_approval_date
    = f.input :leave_application_id

  .form-actions
    = f.button :submit, class: 'btn-primary'
