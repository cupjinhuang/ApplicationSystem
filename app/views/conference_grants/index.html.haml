      %td
        = link_to t(:show), conference_grant, class: 'btn btn-mini'
        = link_to t(:edit), edit_conference_grant_path(conference_grant),
          class: 'btn btn-mini'
        = link_to t(:destroy), conference_grant, 
          :confirm => t(:are_you_sure, default: "Are you sure?"), :method => :delete,
          class: 'btn btn-mini btn-danger'

%br

= link_to new_conference_grant_path, class: 'btn btn-success' do
  %i.icon-plus.icon-white
  = t(:new_conference_grant)

