    %th

  - @conference_grants.each do |conference_grant|
    %tr
      %td= conference_grant.name
      %td= conference_grant.staff_id
      %td= conference_grant.passport_id
      %td= conference_grant.post
      %td= conference_grant.years_at_iiis
      %td= conference_grant.phone_num
      %td= conference_grant.conf_name
      %td= conference_grant.conf_date
      %td= conference_grant.conf_place
      %td= conference_grant.present_paper
      %td= conference_grant.present_poster
      %td= conference_grant.title1
      %td= conference_grant.title2
