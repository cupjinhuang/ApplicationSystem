!!! 5
%html
  %head
    %title Application System
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %header.navbar.navbar-fixed-top.navbar-inverse.bs-docs-nav
      .container
        .navbar-brand= link_to 'Application System', :root
        %ul.nav.navbar-nav
          %li= link_to 'Log in', new_user_session_path if not user_signed_in?
          %li= link_to current_user.email, :root if user_signed_in?
          %li= link_to 'Log out', destroy_user_session_path, :method => :delete if user_signed_in?
    .container
      - if flash[:notice]
        .alert.alert-success= flash[:notice]
      - elsif flash[:warning]
        .alert.alert-warning= flash[:warning]

      = yield
